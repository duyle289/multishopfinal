@using WebBanlaptop.Models;
@model LOAISANPHAM

@{
    ViewBag.Title = "SuaLSP";
    Layout = "~/Views/Layout/_AdminLayout.cshtml";
    LOAISANPHAM lsp = ViewBag.lsp;
}

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <div class="col-sm-12">
                    @using (Html.BeginForm("SuaLSP", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h1 class="h3 mb-2 text-gray-800">Cập nhật loại sản phẩm</h1>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.MALSP)

                            <div class="form-group">
                                @Html.Label("","Tên loại sản phẩm", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBox("TENLOAISP", lsp.TENLOAISP,new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("","Trạng thái", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <div class="checkbox">
                                        @Html.CheckBox("TRANGTHAI", lsp.TRANGTHAI, new { htmlAttributes = new { @class = "form-control" } })
                                        
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("", "Icon", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input name="Icon" type="file" />
                                    <span style="color:red">@ViewBag.upload</span>
                                    <br />
                                </div>
                                <img src="@Url.Content("~/Content/HinhAnhSP/" + lsp.ICON)" width="300" />
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Lưu" class="btn btn-default btn btn-info create-admin" />
                                    <a href="@Url.Action("listloaiSP", "Admin")" class="btn btn-danger">Trở lại</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

