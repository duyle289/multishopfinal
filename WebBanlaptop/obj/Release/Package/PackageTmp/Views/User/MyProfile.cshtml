@model WebBanlaptop.Models.KHACHHANG
@{
    ViewBag.Title = "Thông tin cá nhân";
    Layout = "~/Views/Layout/_HomeLayout.cshtml";
    var item = Model;
}


<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-3 col-md-4">
            <div class="bg-light p-4 mb-30">
                <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                    <button onclick="location.href='@Url.Action("Index", "Home")'" class="dropdown-item" type="button">
                        <img src="~/Content/img/trangchu.png" width="25" height="25"/> Trang chủ
                    </button>
                    <hr />
                </div>
                <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                    <button onclick="location.href='@Url.Action("MyProfile", "User")'" class="dropdown-item" type="button">
                        <img src="~/Content/img/canhan.png" width="25" height="25" /> Hồ sơ của tôi
                    </button>
                    <hr />
                </div>
                <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                    <button onclick="location.href='@Url.Action("ChangePassword", "User")'" class="dropdown-item" type="button">
                        <img src="~/Content/img/doimk.png" width="25" height="25" /> Đổi mật khẩu
                    </button>
                    <hr />
                </div>
                <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                    <button onclick="location.href='@Url.Action("OdersHistory", "User")'" class="dropdown-item" type="button">
                        <img src="~/Content/img/lichsu.png" width="25" height="25" /> Lịch sử đặt hàng
                    </button>
                </div>

            </div>
        </div>
        <div class="banner-bg-inner">
        </div>
        <div style="position:relative; left:100px">
            <div class="myProfile" style="width:100%;display:flex; justify-content:center">
                <!-- strURL :lưu xong reload lại trang-->

                @using (Html.BeginForm(new { strURL = Request.Url.ToString() }))
                {
                    Html.AntiForgeryToken();
                    <form>
                        <div style="position: relative; left: 600px; width: 300px">
                            @if (TempData["AlertMessage"] != null)
                            {
                                <div id="AlertBox" class="alert @TempData["AlertType"] hide">
                                    @TempData["AlertMessage"]
                                </div>
                            }
                        </div>
                        <div class="profile">
                            <h3 class="id1">Thông tin cá nhân</h3>
                            <div class="form-group">
                                <label for="name">Họ tên:</label>
                                <input type="text" class="form-control" id="name" name="NAME" aria-describedby="emailHelp" placeholder="Họ tên" value="@item.TENKH">
                            </div>
                            <div class="form-group">
                                <label for="email">Email:</label>
                                <input type="email" class="form-control" id="email" name="EMAIL" placeholder="Email" value="@item.EMAIL">
                            </div>
                            <div class="form-group">
                                <label for="CCCD">CCCD:</label>
                                <input type="text" class="form-control" id="CCCD" name="CCCD" placeholder="CCCD" value="@item.CCCD">
                            </div>
                            <div class="form-group">
                                <label for="address">Địa chỉ:</label>
                                <input type="text" class="form-control" id="diachi" name="DIACHI" placeholder="Địa chỉ" value="@item.DIACHI">
                            </div>
                            <div class="form-group">
                                <label for="phoneNumber">Điện thoại:</label>
                                <input type="tel" class="form-control" id="sdt" name="SDT" placeholder="Điện thoại" value="@item.SDT">
                            </div>
                            <div class="form-group">
                                <label for="date">Ngày Sinh</label>
                                <input type="date" class="form-control" id="NGAYSINH" name="NGAYSINH" placeholder="Ngày sinh:" value="@String.Format("{0:yyyy-MM-dd}",item.NGAYSINH)">
                            </div>
                            <button type="submit" class="btn btn-primary" id="save-btn"><i class="fa fa-save"></i> Cập nhật thông tin cá nhân</button>


                        </div>
                    </form>
                }

            </div>
        </div>
    </div>

</div>

<style type="text/css">
    .form-control {
        width: 600px;
        border-radius: 30px;
    }

    h3.id1 {
        text-align: center;
    }
</style>

