@using WebBanlaptop.Models;
@model IEnumerable<SANPHAM>
@{
    bool isTop = ViewBag.isTop;
}
@foreach (var item in Model.GroupBy(n => n.LOAISANPHAM))
{
    if (item.Key != null && item.Key.TRANGTHAI && isTop)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
            <a class="text-decoration-none" href="@Url.Action("showSPTheoLoai","SanPham",new {@MaLSP = item.Key.MALSP})">
                <div class="cat-item d-flex align-items-center mb-4">
                    <div class="overflow-hidden" style="width: 100px; height: 100px;">
                        <img class="img-fluid" src="@Url.Content("~/Content/HinhAnhSP/"+item.Key.ICON)" alt="">
                    </div>
                    <div class="flex-fill pl-3">
                        <h6>@item.Key.TENLOAISP</h6>
                        <small class="text-body">
                            @item.Count() sản phẩm
                        </small>
                    </div>
                </div>
            </a>
        </div>
    }
    if (item.Key != null && item.Key.TRANGTHAI && isTop==false)
    {
<a class="text-secondary mb-2" href="@Url.Action("showSPTheoLoai","SanPham",new {@MaLSP = item.Key.MALSP})"><i class="fa fa-angle-right mr-2"></i>@item.Key.TENLOAISP</a>
    }
}
