@using WebBanlaptop.Models;
@model IEnumerable<TINTUC>
@{
    ViewBag.Title = "Tin tức";
    Layout = "~/Views/Layout/_HomeLayout.cshtml";
}


<link href="~/Content/css/cssGioiThieu.css" rel="stylesheet" />
<style>
    .title-news {
        text-transform: capitalize;
    }
</style>
<div id="main">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Tin tức</span></h2>
    <div class="col-md-9">
        <div class="row row-cols-md-3 row-cols-1">
            @foreach (var item in Model)
            {
                if (item.TRANGTHAI)
                {
                    <div class="col my-3">
                        <div class="artical-item text-center">
                            <div class="artical-title p-2" style="height: 60px;">
                                <a href="/Home/Noidung/@item.MATT">
                                    <h4 class="title-news" >@item.TENTT</h4>
                                </a>
                            </div>
                            <div class="artical-img">
                                <a href="/Home/Noidung/@item.MATT">
                                    <img src="@Url.Content("~/Content/HinhTinTuc/"+item.HINHTT )" width="300">
                                </a>
                            </div>
                            <div class="title-news">
                                @item.MOTA
                            </div>
                        </div>
                    </div>
                }

            }
        </div>
    </div>
</div>
